{
  "name": "@looplia-core/provider",
  "version": "0.2.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./claude-agent-sdk": {
      "types": "./dist/claude-agent-sdk/index.d.ts",
      "import": "./dist/claude-agent-sdk/index.js"
    }
  },
  "scripts": {
    "build": "tsc && bun run copy-assets",
    "copy-assets": "bun run scripts/copy-assets.ts",
    "dev": "tsc --watch",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@looplia-core/core": "workspace:*",
    "zod-to-json-schema": "^3.23.0"
  },
  "peerDependencies": {
    "@anthropic-ai/claude-agent-sdk": ">=0.1.0"
  },
  "peerDependenciesMeta": {
    "@anthropic-ai/claude-agent-sdk": {
      "optional": true
    }
  },
  "devDependencies": {
    "@looplia-core/config": "workspace:*",
    "@types/bun": "^1.0.0"
  }
}
